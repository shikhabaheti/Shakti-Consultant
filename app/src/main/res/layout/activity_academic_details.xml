            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_edittext_bg"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView24">

            <Spinner
                android:id="@+id/spBoard1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/spinner_style"
                android:entries="@array/test9"
                />

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/spinner12"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custom_edittext_bg"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner11">

            <Spinner
                android:id="@+id/spYear1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/spinner_style"
                android:spinnerMode="dropdown"
                android:entries="@array/year"
                />

        </androidx.cardview.widget.CardView>




        <EditText
            android:id="@+id/edtXPercent"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:maxLength="3"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_edittext_bg"
            android:fontFamily="@font/poppins_regular"
            android:hint="CGPA/Percentage"

            android:inputType="number"
            android:outlineProvider="paddedBounds"
            android:paddingStart="10dp"
            android:textColor="@color/input_text_color"
            android:textColorHint="@color/hint_color_1"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/spinner11" />



        <TextView
            android:id="@+id/textView25"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="XIITH CLASS"
            android:textAlignment="center"
            android:textColor="@color/main_text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtXPercent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/spinner14"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_edittext_bg"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView25">

            <Spinner
                android:id="@+id/spBoard2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                style="@style/spinner_style"
                android:entries="@array/test9"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/spinner15"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custom_edittext_bg"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner14">

            <Spinner
                android:id="@+id/spYear2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/spinner_style"
                android:spinnerMode="dropdown"
                android:entries="@array/year"
                />

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/edtXIIPercent"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_edittext_bg"
            android:fontFamily="@font/poppins_regular"
            android:hint="CGPA/Percentage"
