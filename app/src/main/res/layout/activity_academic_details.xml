            app:layout_constraintTop_toBottomOf="@+id/spinner14" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="POST GRADUATION"
            android:textAlignment="center"
            android:textColor="@color/main_text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtUniversityName" />

        <androidx.cardview.widget.CardView
            android:id="@+id/spinner18"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custom_edittext_bg"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView27">

            <Spinner
                android:id="@+id/spPostGraduation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/spinner_style"
                android:spinnerMode="dropdown"
                android:entries="@array/test10"
                />

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/someEdit14"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_edittext_bg"
            android:fontFamily="@font/poppins_regular"
            android:hint="Specilization"
            android:inputType="text"
            android:outlineProvider="paddedBounds"
            android:paddingStart="10dp"
            android:textColor="@color/input_text_color"
            android:textColorHint="@color/hint_color_1"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/textView27" />

        <androidx.cardview.widget.CardView
            android:id="@+id/spinner19"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custom_edittext_bg"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="parent"
